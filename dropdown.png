*{
    margin:0;
    padding:0;
    font-family:'Microsoft Yahei';
    text-decoration: none;
    list-style:none;
    box-sizing:border-box;
}
.sidebar{
    width:220px;
    border-right: 1px solid #ddd;
}
.sidebar .title{
    display: inline-block;
    width:219px;
    font-size:20px;
    padding: 15px 10px;
    text-indent: 10px;
    border-bottom: 1px solid #ddd;
    font-weight: normal;
}
.gray{
    color:#808080;
}
.show{
    display:block;
}
.hidden{
    display: none;
}
.left .lidown{
    border-bottom: 1px solid #ddd;
}
.left .down{
    color:#000;
    padding-top:20px;
    padding-left:20px;
    padding-bottom:20px;
    display: inline-block;
    width: 219px;
    /*background: url(./img/dropdown.png) no-repeat;
    background-size: 8px 5px;
    background-position: 200px 28px ;*/
}
.bgdown{
    background: url(./img/dropdown.png) no-repeat;
    background-size: 8px 5px;
    background-position: 200px 28px ;
}
.bgup{
    background: url(./img/dropup.png) no-repeat;
    background-size: 8px 5px;
    background-position: 200px 28px ;
}
.left .down:hover{
    background-color: rgb(246, 246, 246);
}
.left .dis-content .content{
    display: inline-block;
    font-size: 14px;
    padding-left:35px;
    padding-top:15px;
    padding-bottom:15px;
    width: 219px;
}
.bgblue{
    background-color: #108EDF;
    color:white;
}
.left .dis-content .content:hover{
    background-color: rgb(246, 246, 246);
}
